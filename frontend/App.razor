<CascadingAuthenticationState>
<CascadingBlazoredModal DisableBackgroundCancel="true">
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                        <h2 class="mb-3">***Sinulla ei ole pääsy tälle sivulle!***</h2>
                        <img src="https://img.freepik.com/premium-vector/red-rubber-stamp-with-word-stop-grunge-style-road-signs-vector-illustration_615910-652.jpg?w=740"
                        alt="unauthorized"/>
                </NotAuthorized>
            </AuthorizeRouteView>

            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                    <img src="https://img.freepik.com/premium-vector/illustrations-frustrated-expression-business-man-oops-404-error-design-concept-landing-page_576269-375.jpg?w=740" />
                @*<p role="alert">Sorry, there's nothing at this address.</p>*@
            </LayoutView>
        </NotFound>
    </Router>
</CascadingBlazoredModal>
</CascadingAuthenticationState>


